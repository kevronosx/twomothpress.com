{
  "name": "twomothpress.com",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "clean": "rm -f dist/{css/*,js/*,images/*,shims/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/css/",
    "imagemin": "imagemin ./src/images dist/images -p",
    "icons": "svgo -f ./src/images/icons && mkdir -p dist/images && svg-sprite-generate -d ./src/images/icons -o dist/images/icons.svg",
    "serve": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html'",
    "compile": "babel --compact -d ./compiled/ ./src/js/",
    "browserify": "browserify ./compiled/app.js -o ./compiled/bundle.js -t [babelify --presets [ es2015 ] ]",
    "lint": "eslint ./compiled/bundle.js",
    "uglify": "mkdir -p dist/js && uglifyjs ./compiled/bundle.js -m -c -o dist/js/bundle.js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run compile && npm run browserify && npm run lint && npm run uglify",
    "build:cssfast": "npm run scss",
    "browserifyfast": "browserify ./compiled/app.js -o ./dist/js/bundle.js -t [babelify --presets [ es2015 ] ]",
    "build:jsfast": "npm run compile && npm run browserifyfast",
    "watch:cssfast": "onchange './src/css' -- npm run build:cssfast",
    "watch:jsfast": "onchange './src/js' -- npm run build:jsfast",
    "copy:shims": "cp -R ./src/shims ./dist/",
    "copy:audio": "cp -R ./src/audio ./dist/audio",
    "build:images": "npm run imagemin",
    "build:all": "npm run build:css && npm run build:js && npm run build:images && npm run copy:shims && npm run copy:audio",
    "watch:css": "onchange './src/css' -- npm run build:css",
    "watch:js": "onchange './src/js' -- npm run build:js",
    "watch:images": "onchange './src/images' -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images",
    "watch:dev": "npm-run-all -p watch:css watch:js",
    "watch:devstatic": "npm-run-all -p watch:cssfast watch:jsfast"
  },
  "author": "Kevin M Ryan",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.12.8",
    "browserify": "^13.0.1",
    "envify": "^3.4.1",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.6",
    "uglify-js": "^2.6.2"
  }
}
